<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PageHome">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@color/material_dynamic_primary90"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Menu Aplikasi"
            android:textSize="24dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginTop="30dp">

        </TextView>

        <Button
            android:id="@+id/btnkalkulator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:backgroundTint="#4E0E40"
            android:text="Kalkulator" />

        <Button
            android:id="@+id/btnPassing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:backgroundTint="#1B1D80"
            android:text="Pergi ke Login Screen" />

        <Button
            android:id="@+id/btnhewan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:backgroundTint="#1E5F17"
            android:text="List view" />

        <Button
            android:id="@+id/btnrvbuku"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:backgroundTint="#B33131"
            android:text="Recyle View" />

        <Button
            android:id="@+id/btnrvbuah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:backgroundTint="#4E0E40"
            android:text="Recycle view buah " />

        <Button
            android:id="@+id/btnrvmoviecard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:backgroundTint="#1B1D80"
            android:text="Recycle view Movie " />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>